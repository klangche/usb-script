{
  "version": "1.0.0",
  "lastUpdated": "2026-02-24",
  
  "metadata": {
    "toolName": "USB Tree Diagnostic Tool",
    "author": "klangche",
    "repository": "https://github.com/klangche/usb-script",
    "docs": "https://github.com/klangche/usb-script/wiki"
  },

  "scoring": {
    "baseFormula": "9 - maxHops",
    "minScore": 1,
    "maxScore": 10,
    
    "penalties": {
      "rehandshake": 0.5,
      "crc": 1.0,
      "busReset": 1.0,
      "overcurrent": 2.0,
      "otherError": 0.5
    },
    
    "penaltyLimits": {
      "rehandshake": 2.0,
      "crc": 3.0,
      "busReset": 3.0,
      "overcurrent": 4.0,
      "otherError": 2.0
    },
    
    "thresholds": {
      "stable": 9,
      "potentiallyUnstable": 6,
      "notStable": 1
    }
  },

  "platforms": {
    "windows": {
      "name": "Windows x64",
      "rec": 5,
      "max": 7,
      "color": "#00ffff",
      "detection": "$env:OS -match 'Windows' -and [Environment]::Is64BitOperatingSystem"
    },
    "windowsArm": {
      "name": "Windows ARM",
      "rec": 3,
      "max": 5,
      "color": "#00ffff",
      "detection": "$env:OS -match 'Windows' -and [System.Runtime.InteropServices.RuntimeInformation]::ProcessArchitecture -eq 'Arm64'"
    },
    "linux": {
      "name": "Linux x64",
      "rec": 4,
      "max": 6,
      "color": "#00ffff",
      "detection": "uname -s | grep -q Linux && uname -m | grep -q x86_64"
    },
    "linuxArm": {
      "name": "Linux ARM",
      "rec": 3,
      "max": 5,
      "color": "#00ffff",
      "detection": "uname -s | grep -q Linux && uname -m | grep -q aarch64"
    },
    "macIntel": {
      "name": "Mac Intel",
      "rec": 5,
      "max": 7,
      "color": "#00ffff",
      "detection": "uname -s | grep -q Darwin && uname -m | grep -q x86_64"
    },
    "macAppleSilicon": {
      "name": "Mac Apple Silicon",
      "rec": 3,
      "max": 5,
      "color": "#00ffff",
      "detection": "uname -s | grep -q Darwin && uname -m | grep -q arm64"
    },
    "ipad": {
      "name": "iPad USB-C (M-series)",
      "rec": 2,
      "max": 4,
      "color": "#ffff00"
    },
    "iphone": {
      "name": "iPhone USB-C",
      "rec": 2,
      "max": 4,
      "color": "#00ff00"
    },
    "androidPhone": {
      "name": "Android Phone (Qualcomm)",
      "rec": 3,
      "max": 5,
      "color": "#00ff00"
    },
    "androidTablet": {
      "name": "Android Tablet (Exynos)",
      "rec": 2,
      "max": 4,
      "color": "#ffff00"
    }
  },

  "colors": {
    "stable": "#00ff00",
    "potentiallyUnstable": "#ffff00",
    "notStable": "#ff00ff",
    "cyan": "#00ffff",
    "gray": "#c0c0c0",
    "magenta": "#ff00ff",
    "yellow": "#ffff00",
    "green": "#00ff00",
    "header": "#00ffff",
    "warning": "#ffff00",
    "error": "#ff00ff"
  },

  "messages": {
    "welcome": "USB TREE DIAGNOSTIC TOOL",
    "noDevices": "No USB devices found.",
    "adminPrompt": "Run with admin for maximum detail? (y/n)",
    "adminYes": "Relaunching as admin...",
    "adminNo": "Running without admin (basic tree + basic deep if selected)",
    "adminAlready": "✓ Running with admin privileges → full deep analytics available",
    "deepPrompt": "Run deep analytics / stability monitoring? (y/n)",
    "deepSkipped": "Deep analytics skipped.",
    "htmlPrompt": "Open HTML report? (y/n)",
    "htmlSaved": "HTML report saved as:",
    "textSaved": "Report saved as:",
    "logSaved": "Log file:",
    "exitPrompt": "Press any key to exit...",
    "enumerating": "Enumerating USB devices...",
    "found": "Found {0} devices and {1} hubs",
    "startingBasic": "STARTING BASIC DEEP ANALYTICS",
    "startingDeeper": "STARTING DEEPER ANALYTICS",
    "modeBasic": "Mode: Basic (re-handshakes / disconnects only)",
    "modeDeeper": "Mode: Advanced (CRC, resets, overcurrent, re-handshakes + more)",
    "pressCtrlC": "Press Ctrl+C to stop monitoring",
    "complete": "ANALYTICS COMPLETE"
  },

  "analytics": {
    "basic": {
      "name": "Basic Deep Analytics",
      "description": "Re-handshakes / disconnects only",
      "counters": ["rehandshake"],
      "color": "cyan"
    },
    "deeper": {
      "name": "Deeper Analytics",
      "description": "CRC, resets, overcurrent, re-handshakes",
      "counters": ["rehandshake", "crc", "busReset", "overcurrent"],
      "color": "magenta"
    }
  },

  "reporting": {
    "html": {
      "backgroundColor": "#000000",
      "textColor": "#e0e0e0",
      "fontFamily": "Consolas, 'Courier New', monospace",
      "includeTimestamps": true,
      "includeEventLog": true
    },
    "text": {
      "separator": "==============================================================================",
      "includeTree": true,
      "includeStability": true
    }
  },

  "updates": {
    "checkOnStart": true,
    "configUrl": "https://raw.githubusercontent.com/klangche/usb-script/main/usb-tree-config.json",
    "versionCheck": true
  },

  "debug": {
    "verbose": false,
    "logToFile": false,
    "saveRawData": false
  }
}
